<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ThirdActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ECE8E8"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        android:padding="10sp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/icon"
                android:layout_width="71dp"
                android:layout_height="63dp"
                android:layout_gravity="start"
                android:contentDescription="@string/app_name"
                android:src="@drawable/icon"
                android:layout_marginLeft="20sp"
                android:layout_marginRight="20sp"/>

            <TextView
                android:id="@+id/toolbar_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/app_name"
                android:textSize="30sp"
                android:textColor="@android:color/black"
                android:paddingEnd="16dp"/>

        </LinearLayout>
    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="150dp"
        tools:ignore="MissingConstraints"
        android:paddingLeft="30dp">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Résultats :"
            android:textSize="25sp"
            android:textColor="@color/black"
            android:layout_marginBottom="32dp"/>


        <TextView
            android:id="@+id/result_q1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Réponses à la question 1 :"
            android:textSize="20sp"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="20dp" />
        <TextView
            android:id="@+id/rp1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" "
            android:textSize="20sp"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="20dp" />

        <TextView
            android:id="@+id/result_q2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Réponse à la question 2 :"
            android:textSize="20sp"
            android:layout_below="@+id/result_q1"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp" />
        <TextView
            android:id="@+id/rp2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" "
            android:textSize="20sp"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="20dp" />



        <ImageView
            android:id="@+id/result_image"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/img_1"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"/>

        <Button
            android:id="@+id/goback"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#56AF5A"
            android:text="Retour à l'accueil"
            android:textSize="17sp"
            android:textColor="@android:color/white"
            android:layout_marginTop="20dp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
